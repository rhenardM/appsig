{#% extends 'base.html.twig' %#}

{% block title %}DocFinance index{% endblock %}

{% block body %}
    <h1>DocFinance index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Type</th>
                <th>Objet</th>
                <th>File</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for doc_finance in doc_finances %}
            <tr>
                <td>{{ doc_finance.id }}</td>
                <td>{{ doc_finance.nom }}</td>
                <td>{{ doc_finance.type }}</td>
                <td>{{ doc_finance.objet }}</td>
                <td>{{ doc_finance.file }}</td>
                <td>{{ doc_finance.date ? doc_finance.date|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_doc_finance_show', {'id': doc_finance.id}) }}">show</a>
                    <a href="{{ path('app_doc_finance_edit', {'id': doc_finance.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_doc_finance_new') }}">Create new</a>
{% endblock %}
