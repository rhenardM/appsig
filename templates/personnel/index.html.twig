{% extends 'base.html.twig' %}

{% block title %}Personnel index{% endblock %}

{% block body %}
    <h1>Personnel index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Prenom</th>
                <th>Function</th>
                <th>Email</th>
                <th>Number</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for personnel in personnels %}
            <tr>
                <td>{{ personnel.id }}</td>
                <td>{{ personnel.name }}</td>
                <td>{{ personnel.prenom }}</td>
                <td>{{ personnel.function }}</td>
                <td>{{ personnel.email }}</td>
                <td>{{ personnel.number }}</td>
                <td>{{ personnel.date ? personnel.date|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_personnel_show', {'id': personnel.id}) }}">show</a>
                    <a href="{{ path('app_personnel_edit', {'id': personnel.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_personnel_new') }}">Create new</a>
{% endblock %}
