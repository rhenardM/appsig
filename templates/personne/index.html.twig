{% extends 'base.html.twig' %}

{% block title %}Personne index{% endblock %}

{% block body %}
    <h1>Personne index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>PostNom</th>
                <th>Prenom</th>
                <th>Age</th>
                <th>Fonction</th>
                <th>Sex</th>
                <th>Email</th>
                <th>Telephone</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for personne in personnes %}
            <tr>
                <td>{{ personne.id }}</td>
                <td>{{ personne.name }}</td>
                <td>{{ personne.PostNom }}</td>
                <td>{{ personne.Prenom }}</td>
                <td>{{ personne.Age }}</td>
                <td>{{ personne.fonction }}</td>
                <td>{{ personne.sex }}</td>
                <td>{{ personne.email }}</td>
                <td>{{ personne.telephone }}</td>
                <td>
                    <a href="{{ path('app_personne_show', {'id': personne.id}) }}">show</a>
                    <a href="{{ path('app_personne_edit', {'id': personne.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_personne_new') }}">Create new</a>
{% endblock %}
